<%layout("/layouts/boilerplate") %>

<div class="row">
<div class="col-8">

    <form method="post" action="/listings/<%=list._id %>?_method=PUT" class=" needs-validation" novalidate  enctype="multipart/form-data">

        <div>
            <label for="tittle" class="form-label"> Tittle</label>
            <input name="tittle" value="<%=list.tittle %>" class="form-control" required> 
            <div class="valid-feedback"> great !</div>
            <div class="invalid-feedback">Fill the info !</div>
        </div>
        <div>
            <label for="description" class="form-label">Description</label>
            <textarea name="description"  class="form-control" required><%=list.description %></textarea><br>
            <div class="valid-feedback"> great !</div>
            <div class="invalid-feedback">Fill the info !</div>
        </div>

        <p>original listing image</p>
        <div><img src="<%=imageurl %>"></div>

        <div>
            <label for="image" class="form-label">Upload new Image</label>
            <input type="file" name="image"    class="form-control" ><br>
            <div class="valid-feedback"> great !</div>
            <div class="invalid-feedback">Fill the info !</div>
        </div>
        <div>
            <label for="price" class="form-label">Price</label>
            <input name="price" value="<%=list.price %>" type="Number"  class="form-control" required><br>
            <div class="valid-feedback"> great !</div>
            <div class="invalid-feedback">Fill the info !</div>
        </div>
        <div>
            <label for="country" class="form-label">Country</label>
            <input name="country" value="<%=list.country %>"  class="form-control" required><br>
            <div class="valid-feedback"> great !</div>
            <div class="invalid-feedback">Fill the info !</div>
        </div>
        <div>
            <label for="location" class="form-label">Location</label>
            <input name="location" value="<%=list.location %>"  class="form-control" required><br>
            <div class="valid-feedback"> great !</div>
            <div class="invalid-feedback">Fill the info !</div>
        </div>
        
           
              
        
            
             
                <button class="btn btn-dark">Submit</button>
        
        
                </form>
        
        

</div>

</div>
    
    